FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    Inlet
    {
        type            zeroGradient;
    }

    Outlet
    {
        type            zeroGradient; // maybe the supersonic solver has a better one! for supersonic flow outlet
    }

    symPlane
    {
    	type		symmetryPlane; 
    }

    Walls
    {
    	type		slip; 
    }
}


